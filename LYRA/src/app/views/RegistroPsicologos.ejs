<section class="home" id="home">
    <div class="login-container">
     
        <div class="login-box">

            <div class="row">
                <div class="column col1">
            <h2 class="TextInfo">Regístrate como psicólogo en Lyra.</h2>
            <h5 class="miniInfo">Crea una cuenta ahora mismo</h5>
            <form method="post" action="/RegistroPsicologos">
              
                <div class="input-container magTop">
                    <h4 class="infoLabel">Nombre</h4>
                    <input type="text" name="Nombre" placeholder="Escribe tu nombre"  class="inputTypes">
                </div>
                <div class="input-container magTop magboTom">
                    <h4 class="infoLabel">Apellidos</h4>
                    <input type="text" name="Apellidos" placeholder="Escribe tus apellidos"  class="inputTypes">
                </div>
                <div class="conteneEdadSexo">
                    <div class="input-container magTop mitades">
                        <h4 class="infoLabel">Edad</h4>
                        <input type="number" name="Edad" placeholder="0 - 100"  class="inputTypes">
                    </div>
                    <div class="input-container magTop mitades marginLeft">
                        <h4 class="infoLabel">Sexo</h4>
                        <select class="inputTypes2 selectB" name="Sexo">
                            <option value="Femenino">Selecciona</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Masculino">Masculino</option>
                        </select>
                    </div>
                </div>
                <div class="input-container magTop">
                    <h4 class="infoLabel">Nombre de usuario</h4>
                    <input type="text" name="Usuario" placeholder="Escribe tu usuario personalizado..."  class="inputTypes">
                </div>
                <div class="input-container magTop">
                    <h4 class="infoLabel">Correo electrónico</h4>
                    <input type="email" name="Correo" placeholder="Ejemplo@mail.com"  class="inputTypes">
                </div>
                <div class="input-container magTop">
                    <h4 class="infoLabel">Contraseña</h4>
                    <input type="password" name="Pass" placeholder="Escribe tu contraseña"  class="inputTypes">
                </div>    
                <button type="submit" class="SubmitBtn">Registrate </button>
                <h3 class="DescriptionInfoBottom">¿Ya tienes una cuenta? <a href="/InicioSesion" class="Redirect">inicia sesión</a> </h3>
            </form>
                 
                </div>
                <div class="column col2">
                    <div class="coles">
                        <div class="Circlelogo"></div>
                        <div class="LogoName">Lyra</div>
                        <div class="LogoName2">Regístra una cuenta para poder acceder al chat</div>
                        <div class="cuadrodatos">Lorem ipsum dolor sit, amet consectetur adipisicing elit. Aperiam aliquam obcaecati suscipit expedita voluptatibus iure vitae quo necessitatibus, earum fugiat!</div>
                    </div>
                </div>
              </div>   
        </div>
    </div>
    <% if (typeof alerta !== 'undefined') { %>
      <script src="/js/Alertas.js"></script>
      <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
      <%if(alerta === 'Usuario ya registrado'){%>
          <script>
              UsuarioRegistradoAnteriormente();
          </script>
      <%}else if(alerta === 'Usuario registrado'){%>
          <script>
              UsuarioRegistrado();
          </script>
      <%}else if(alerta ==='Error Servidor'){%>
          <script>
              ErrorServidor();
          </script>
      <%}%>
    <%}%>
</body>
